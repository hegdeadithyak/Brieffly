{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],                   // Fix for root import alias
      "@/components/*": ["./src/components/*"], // Fix for components import alias
      "@/lib/*": ["./src/lib/*"]            // Fix for lib import alias
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/pages/components/Card/CourseTag.jsx","src/pages/components/CourseSection.jsx", "next.config.mjs", "tailwind.config.js", "src/appwrite.js"],
  "exclude": ["node_modules"]
}
